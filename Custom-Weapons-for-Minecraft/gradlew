#!/usr/bin/env sh

##############################################################################
##
##  Gradle start up script for UN*X
##
##############################################################################

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"

while [ -h "$PRG" ]; do
    LS=`ls -ld "$PRG"`
    LINK=`expr "$LS" : '.*-> \(.*\)$'`
    if expr "$LINK" : '/.*' > /dev/null; then
        PRG="$LINK"
    else
        PRG=`dirname "$PRG"`/"$LINK"
    fi
done

APP_HOME=`dirname "$PRG"`

# Add default JVM options here. You can also use JAVA_OPTS and GRADLE_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS='-Xmx64m -Xms64m'

# OS specific support (must be 'true' or 'false')
cygwin=false
darwin=false
mingw=false
case "`uname`" in
  CYGWIN*) cygwin=true ;; 
  Darwin*) darwin=true 
           if [ -z "$JAVA_HOME" ] ; then
             JAVA_HOME=`/usr/libexec/java_home`
           fi
           ;;
  MINGW*) mingw=true ;;
esac

# Determine the Java command to execute. 
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses java to mean javac
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME environment variable in your environment to point to the JRE/JDK install location."
    fi
else
    JAVACMD="java"
    which java >/dev/null || die "ERROR: JAVA_HOME is not set and no 'java' command can be found in your PATH.

Please set the JAVA_HOME environment variable in your environment to point to the JRE/JDK install location."
fi

# Increase the maximum file descriptors if we can.
if [ "$cygwin" = "false" -a "$darwin" = "false" -a "$mingw" = "false" ]; then
    MAX_FD_LIMIT=`ulimit -H -n`
    if [ "$?" -eq 0 ]; then
        if [ "$MAX_FD_LIMIT" -gt 1024 ]; then
            # Set to 1024 because the default is 1024 for most Linux distributions
            ulimit -n 1024
        fi
    fi
fi

# For Darwin, add options to allow Java to run headless.
if [ "$darwin" = "true" ] ; then
    DEFAULT_JVM_OPTS="$DEFAULT_JVM_OPTS -Djava.awt.headless=true"
fi

# Escape application args
APP_ARGS=""
for arg in "$@"; do
    if [ "$arg" = "--" ]; then
        APP_ARGS="$APP_ARGS --"
    else
        APP_ARGS="$APP_ARGS \"$arg\""
    fi
done

# Collect all arguments for the Java command
JAVA_OPTS="$DEFAULT_JVM_OPTS $JAVA_OPTS $GRADLE_OPTS"

# For Gradle, add options to allow Java to run headless.
if [ "$darwin" = "true" ] ; then
    JAVA_OPTS="$JAVA_OPTS -Djava.awt.headless=true"
fi

# Execute Gradle
exec "$JAVACMD" $JAVA_OPTS -classpath "$APP_HOME/gradle/wrapper/gradle-wrapper.jar" org.gradle.wrapper.GradleWrapperMain $APP_ARGS
